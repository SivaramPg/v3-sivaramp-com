---
import Footer from '../components/Footer.astro'
import About from '../components/sections/About.astro'
import Education from '../components/sections/Education.astro'
import Experience from '../components/sections/Experience.astro'
import LongBio from '../components/sections/LongBio.astro'
import Projects from '../components/sections/Projects.astro'
import WorkExperience from '../components/sections/WorkExperience.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" href="/favicon.ico" />

    <link
      rel="preload"
      href="/fonts/Atkinson-Hyperlegible-Bold.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Atkinson-Hyperlegible-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Atkinson-Hyperlegible-Regular.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Atkinson-Hyperlegible-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Full stack developer, specializing in React based frontends, with a keen eye on functionality & performance."
    />
    <meta name="og:title" content="Sivaram's Website" />
    <meta
      name="og:description"
      content="Full stack developer, specializing in React based frontends, with a keen eye on functionality & performance."
    />
    <meta name="twitter:title" content="Sivaram's Website" />
    <meta
      name="twitter:description"
      content="Full stack developer, specializing in React based frontends, with a keen eye on functionality & performance."
    />
    <meta
      name="image"
      property="og:image"
      content="https://sivaramp.com/me.jpg"
    />
    <meta
      name="image"
      property="twitter:image"
      content="https://sivaramp.com/me.jpg"
    />
    <meta property="og:type" content="portfolio" />
    <meta name="author" content="Sivaram Pandariganthan" />
    <meta property="og:url" content="https://sivaramp.com" />

    <script defer data-domain="sivaramp.com" src="https://plausible-analytics-ce-production-eaee.up.railway.app/js/script.file-downloads.hash.outbound-links.pageview-props.tagged-events.js"></script>
    <script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>



    <title>Sivaram's Website</title>

    <style is:global>
      body {
        transition:
          background-color 150ms linear,
          color 150ms linear;
      }
      @font-face {
        font-family: 'Atkinson';
        src:
          url('/fonts/Atkinson-Hyperlegible-Regular.woff2') format('woff2'),
          url('/fonts/Atkinson-Hyperlegible-Regular.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'Atkinson';
        src:
          url('/fonts/Atkinson-Hyperlegible-Bold.woff2') format('woff2'),
          url('/fonts/Atkinson-Hyperlegible-Bold.woff') format('woff');
        font-weight: bold;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body
    class="bg-gray-50 dark:bg-black text-black dark:text-white w-full min-h-screen"
  >
    <main
      class="w-full max-w-screen-lg mx-auto min-h-screen py-6 sm:py-10 md:py-14 lg:py-20 px-4 flex flex-col gap-6 sm:gap-8 md:gap-12 relative"
    >
      <About />
      <LongBio />
      <WorkExperience />
      <Education />
      <Experience />
      <Projects />
    </main>
    <Footer />
  </body>
</html>
